<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">


    <changeSet id="20211024_1_createPenalty" author="csy">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="penalty"/>
            </not>
        </preConditions>

        <createTable tableName="penalty">

            <column name="id" type="int" autoIncrement="true" remarks="主键"   >
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="name" type="varchar(50)" remarks="行政处罚名称"  >
                <constraints nullable="false" />
            </column>

            <column name="number" type="varchar(50)" remarks="行政处罚决定文号"  >
                <constraints nullable="false" />
            </column>

            <column name="type" type="varchar(15)" remarks="处罚类型('personal':个人|'organization:企业)"  >
                <constraints nullable="false" />
            </column>

            <column name="partyName" type="varchar(20)" remarks="被罚当事人名称"   >
                <constraints nullable="false" />
            </column>

            <column name="responsiblePersonName" type="varchar(20)" remarks="主要负责人姓名" />

            <column name="facts" type="varchar(255)" remarks="主要违法违规事实" />

            <column name="basis" type="varchar(255)" remarks="行政处罚依据"/>

            <column name="decision" type="varchar(255)" remarks="行政处罚决定"/>

            <column name="organName" type="varchar(20)" remarks="行政处罚机关名称"/>

            <column name="date" type="date" remarks="行政处罚日期"/>

            <column name="status" type="varchar(1)"  defaultValue="0" remarks="发布类型('0':未发布|'1':已发布)"   >
                <constraints nullable="false" />
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>